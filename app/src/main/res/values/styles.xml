<resources>

    <style name="TwitterTheme." parent="Theme.AppCompat.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">#55acee</item>

    </style>

    <style name="counterText">
        <item name="android:textColor">#66757f</item>
    </style>

    <style name="counterOverride">
        <item name="android:textColor">#ff0000</item>
    </style>

    <style name="TwitterTheme" parent="Theme.AppCompat.NoActionBar" >
        <item name="colorAccent">@color/accent_twitter</item>
        <item name="colorPrimaryDark">@color/primary_dark_twitter</item>
    </style>

</resources>
